/**
 * @description This ruleset enforces a strict user-ownership model for personal data, role-based access control for administrative functions,
 * and shared access via membership lists for collaborative content. It prioritizes authorization independence by denormalizing
 * authorization data directly onto documents to avoid costly `get()` calls.
 *
 * @dataStructure
 * - /users/{userId}: Stores user profiles, with the 'role' field used for role-based access control.
 * - /users/{userId}/focusSessions/{sessionId}: Stores focus session data, owned by the user.
 * - /users/{userId}/tasks/{taskId}: Stores task data, owned by the user.
 * - /users/{userId}/notes/{noteId}: Stores note data, owned by the user.
 * - /collabRooms/{roomId}: Stores collaboration room data, with a 'members' map for access control.
 * - /collabRooms/{roomId}/chatMessages/{messageId}: Stores chat messages within collaboration rooms.
 * - /users/{userId}/mentorChats/{chatId}: Stores mentor chat sessions, owned by the user.
 * - /adminLogs/{logId}: Stores admin log entries, writeable only by admins.
 *
 * @keySecurityDecisions
 * - User listing is disallowed.
 * - All write operations require authentication.
 * - Read access to user profiles is allowed for the user themselves to access role information.
 * - Role updates are restricted to administrators.
 *
 * @denormalizationForAuthorization
 * - The `userId` field is denormalized into FocusSession, Task, Note, and MentorChat documents to enforce owner-only access via simple rules.
 * - The `memberIds` field (as a map) is denormalized into CollabRoom documents to allow membership checks without additional `get()` calls.
 *
 * @structuralSegregation
 * - User-specific data is stored in subcollections under /users/{userId} to enforce clear ownership and simplify list operations.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profiles. Allows users to read their own profile, administrators to create user profiles, and only administrators to update the user 'role'.
     * @path /users/{userId}
     * @allow (get) Authenticated user can read own profile: request.auth.uid == userId
     * @allow (create) User can create own profile: request.auth.uid == userId
     * @allow (update) Admin user can update any profile.
     * @deny (create) User attempts to create a profile with a mismatched ID.
     * @deny (update) Non-admin user attempts to update another user's role.
     * @principle Enforces document ownership for reads and role-based access control for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // User listing is disallowed.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isAdmin();
      allow delete: if false;
    }

    /**
     * @description Manages focus sessions for each user. Allows users to read, create, update, and delete their own focus sessions.
     * @path /users/{userId}/focusSessions/{sessionId}
     * @allow (get) Authenticated user can read own focus session: request.auth.uid == userId
     * @allow (create) Authenticated user can create own focus session: request.auth.uid == userId && request.resource.data.userId == userId
     * @allow (update) Authenticated user can update own focus session: request.auth.uid == userId
     * @deny (create) User attempts to create a focus session for another user.
     * @deny (update) User attempts to modify a focus session they don't own.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/focusSessions/{sessionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages tasks for each user. Allows users to read, create, update, and delete their own tasks.
     * @path /users/{userId}/tasks/{taskId}
     * @allow (get) Authenticated user can read own task: request.auth.uid == userId
     * @allow (create) Authenticated user can create own task: request.auth.uid == userId && request.resource.data.userId == userId
     * @allow (update) Authenticated user can update own task: request.auth.uid == userId
     * @deny (create) User attempts to create a task for another user.
     * @deny (update) User attempts to modify a task they don't own.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/tasks/{taskId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages notes for each user. Allows users to read, create, update, and delete their own notes.
     * @path /users/{userId}/notes/{noteId}
     * @allow (get) Authenticated user can read own note: request.auth.uid == userId
     * @allow (create) Authenticated user can create own note: request.auth.uid == userId && request.resource.data.userId == userId
     * @allow (update) Authenticated user can update own note: request.auth.uid == userId
     * @deny (create) User attempts to create a note for another user.
     * @deny (update) User attempts to modify a note they don't own.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/notes/{noteId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages collaboration rooms. Allows members of a room to read room details and create messages.
     * Allows the creator of the room to update the member list.
     * @path /collabRooms/{roomId}
     * @allow (get) Authenticated user can read collab room if a member: request.auth.uid in resource.data.memberIds
     * @allow (create) Authenticated user can create a collab room.
     * @allow (update) Authenticated user can update collab room member list if the creator: request.auth.uid == resource.data.createdBy
     * @deny (create) Unauthenticated user attempts to create a collab room.
     * @deny (update) Non-member user attempts to modify a collab room's details.
     * @principle Enforces shared access based on membership and creator-based modification rights.
     */
    match /collabRooms/{roomId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isMember() {
        return request.auth.uid in resource.data.memberIds;
      }

      function isCreator() {
        return request.auth.uid == resource.data.createdBy;
      }

      allow get: if isSignedIn() && isMember();
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && isCreator();
      allow delete: if false;
    }

    /**
     * @description Manages chat messages within collaboration rooms. Allows members of a room to create and read messages.
     * @path /collabRooms/{roomId}/chatMessages/{messageId}
     * @allow (get) Authenticated user can read chat message if a member of the room: request.auth.uid in get(/databases/$(database)/documents/collabRooms/$(roomId)).data.memberIds
     * @allow (create) Authenticated user can create a chat message if a member of the room: request.auth.uid in get(/databases/$(database)/documents/collabRooms/$(roomId)).data.memberIds
     * @deny (create) User attempts to create a chat message in a room they are not a member of.
     * @principle Enforces shared access based on membership.
     */
    match /collabRooms/{roomId}/chatMessages/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isMember() {
        return request.auth.uid in get(/databases/$(database)/documents/collabRooms/$(roomId)).data.memberIds;
      }

      allow get: if isSignedIn() && isMember();
      allow list: if isSignedIn() && isMember();
      allow create: if isSignedIn() && isMember();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages mentor chat sessions for each user. Allows users to read and create their own mentor chat sessions.
     * @path /users/{userId}/mentorChats/{chatId}
     * @allow (get) Authenticated user can read own mentor chat: request.auth.uid == userId
     * @allow (create) Authenticated user can create own mentor chat: request.auth.uid == userId && request.resource.data.userId == userId
     * @deny (create) User attempts to create a mentor chat for another user.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/mentorChats/{chatId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages admin log entries. Only allows administrators to create log entries.
     * @path /adminLogs/{logId}
     * @allow (create) Authenticated admin user can create an admin log entry: get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
     * @deny (create) Non-admin user attempts to create an admin log entry.
     * @principle Enforces role-based access control.
     */
    match /adminLogs/{logId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }

      allow get: if isSignedIn() && isAdmin();
      allow list: if false; // Prevent listing of admin logs for security.
      allow create: if isSignedIn() && isAdmin();
      allow update: if false;
      allow delete: if false;
    }
  }
}