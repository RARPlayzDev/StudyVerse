/**
 * @fileoverview Firestore Security Rules for StudySync.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data and
 * role-based access for collaborative features. Data validation is relaxed
 * to allow for rapid prototyping, but authorization is strictly enforced.
 *
 * Data Structure:
 * - /users/{userId}: Stores personal user data. Only the user can access their own data.
 * - /users/{userId}/focusSessions/{focusSessionId}: Stores focus sessions. Only the owning user can manage these.
 * - /users/{userId}/tasks/{taskId}: Stores tasks. Only the owning user can manage these.
 * - /notes/{noteId}: Stores notes. Any user can create, but only the owner can modify/delete.
 * - /collabRooms/{roomId}: Stores collaboration room data. Access is controlled by a `members` array for private rooms.
 * - /collabRooms/{roomId}/messages/{messageId}: Stores chat messages. Access is controlled by the `members` array of the parent room.
 * - /users/{userId}/mentorChats/{mentorChatId}: Stores mentor chat data. Only the owning user can manage these.
 * - /adminLogs/{adminLogId}: Stores admin logs. Only admins can access these.
 * - /roles_admin/{userId}: Indicates admin status. Presence of a document grants admin rights.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    match /users/{userId}/{subcollection}/{docId} {
       allow read, write: if isOwner(userId);
    }

    match /notes/{noteId} {
        // Any authenticated user can read any note
        allow get, list: if request.auth != null;
        // Any authenticated user can create a note, as long as they set themselves as the owner
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // Only the user who created the note can update or delete it
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /collabRooms/{roomId} {
      function isMember() {
        return request.auth != null && resource.data.members.hasAny([request.auth.uid]);
      }
      
      // Read: Anyone authed can read public rooms. Members can read private rooms they belong to.
      allow get: if request.auth != null && (resource.data.type == 'public' || isMember());
      allow list: if request.auth != null; // Allow listing to discover public rooms. Private ones are filtered on client.

      // Create: Admins can create public rooms. Any user can create a private room for themselves.
      allow create: if request.auth != null && (
        (request.resource.data.type == 'public' && isAdmin()) ||
        (request.resource.data.type == 'private' && request.resource.data.createdBy == request.auth.uid && request.resource.data.members.hasAll([request.auth.uid]))
      );

      // Update: Room topic/description can be updated by creator. Members can be added.
      // We allow any member to add others to a private room.
      allow update: if request.auth != null && (
        (resource.data.type == 'public' && isAdmin()) ||
        (resource.data.type == 'private' && isMember())
      );

      // Delete: Admins can delete public rooms. The creator can delete a private room.
      allow delete: if request.auth != null && (
        (resource.data.type == 'public' && isAdmin()) ||
        (resource.data.type == 'private' && resource.data.createdBy == request.auth.uid)
      );
    }

    match /collabRooms/{roomId}/messages/{messageId} {
      function isRoomMember() {
           return request.auth != null && get(/databases/$(database)/documents/collabRooms/$(roomId)).data.members.hasAny([request.auth.uid]);
      }
      
      // Only members of the room can read or write messages.
      allow read, write: if isRoomMember() && request.resource.data.senderId == request.auth.uid;
    }

    match /adminLogs/{adminLogId} {
      allow get, list: if isAdmin();
      allow create, update, delete: if false; // Logs are immutable for now.
    }
    
    match /roles_admin/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list, create, update, delete: if isAdmin();
    }
  }
}
